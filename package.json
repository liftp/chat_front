{
  "name": "chat_front",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev-i1": "cross-env PORT=3000 vite --mode development",
    "dev-i2": "cross-env PORT=3001 vite --mode development",
    "dev": "vite --mode development",
    "build": "vue-tsc -b && vite build --mode prod",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder --win",
    "electron:server": "vite",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.hch.chat_front",
    "productName": "chat_front",
    "directories": {
      "output": "output"
    },
    "files": [
      "dist/**/*",
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": "hch",
  "license": "ISC",
  "description": "The simple chat front project",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "axios": "^1.7.8",
    "cross-env": "^7.0.3",
    "element-plus": "^2.8.5",
    "http-proxy-middleware": "^3.0.5",
    "inversify": "^6.2.2",
    "inversify-binding-decorators": "^4.0.0",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nedb": "^1.8.0",
    "pinia": "^2.2.4",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.8",
    "vue": "^3.5.10",
    "vue-router": "^4.4.5",
    "vue-tsc": "^2.1.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@types/inversify": "^2.0.33",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/nedb": "^1.8.16",
    "@types/node": "^22.7.9",
    "electron": "^29.0.0",
    "electron-squirrel-startup": "^1.0.1"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "chat_front"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "main": "dist-electron/main.js"
}
